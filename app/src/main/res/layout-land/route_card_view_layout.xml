<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    card_view:cardElevation="3dp"
    android:clickable="true"
    card_view:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="departure"
        android:id="@+id/tv_departure"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_journey_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_departure_date"
            android:text="departure Date"
            android:layout_above="@+id/tv_departure_time"
            android:layout_alignStart="@+id/tv_departure" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_arrival"
            android:text="arrival"
            android:layout_above="@+id/tv_departure_date"
            android:layout_alignStart="@+id/tv_arrival_Date" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_arrival_Date"
            android:text="arrivalDate"
            android:layout_marginStart="107dp"
            android:layout_below="@+id/tv_arrival"
            android:layout_toEndOf="@+id/tv_duration" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="travel id"
            android:id="@+id/tv_journey_id"
            android:layout_alignBaseline="@+id/tv_departure_date"
            android:layout_alignBottom="@+id/tv_departure_date"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Departure Time"
            android:id="@+id/tv_departure_time"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_departure_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="arrival time"
            android:id="@+id/tv_arrival_time"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_arrival_Date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="duration"
            android:id="@+id/tv_duration"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_departure_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="distance"
            android:id="@+id/tv_distance"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/tv_duration" />
    </RelativeLayout>
</android.support.v7.widget.CardView>